{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "jssrc",
    "removeComments": true,
    "noEmitOnError": true,
    "noResolve": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "baseUrl": "src/",
    "paths": {
      "*": [ "*", "screeps/*" ]
    }
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}
